<%= form_tag({:controller => 'settings', :action => 'my_plugin', :id => 'my_plugin'}, :method => :post) do %>
  <%= 'Assignee: ' %>
  <%= select_tag 'user', options_for_select(User.all.collect{ |u| [u.lastname, u.id] }) %>
  <br>
  <%= 'Project: ' %>
  <%= select_tag 'project', options_for_select(Project.all.collect{ |u| [u.name, u.id] }) %>
  <br>
  <%= submit_tag 'Save' %>
<% end %>